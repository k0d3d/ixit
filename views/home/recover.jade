#wrap
    .container
        .row
          include ../includes/navigation
        #_primary.row
          .col-md-12
            .row
              .col-md-offset-4.col-md-4
                .logo
                  a(href='/') 
                    img#imgLogo(src='/img/logo.png')
                  span.logo-sub shrink, shorten, share everything
            .row
              .col-md-offset-4.col-md-4
                .login-row.well
                  h3.text-center Request Password
                  hr
                  .bubblingG(ng-show='isLoading')
                    span#bubblingG_1
                    span#bubblingG_2
                    span#bubblingG_3
                  .alert.fade.in.alert-danger.alert-dismissable(ng-show='flash', ng-bind='flash')
                  form#auth_login(role='form', ng-submit='recover()', novalidate='novalidate')
                    .form-group
                      label(for='email') Email Address
                      input#email.form-control(type='email', placeholder='example@example.com', name='email', ng-model='form.email', required='required')
                      p
                        span.help-inline We will send instructions to reset your password to this email if it has been registered.
                    .form-group
                      button.btn.btn-primary(type='submit') Send Request
                    input(type='hidden', name='antisurf', value='{{$token}}')
                  h5
                    | Dont have an account? <a ui-sref='register'> Register</a>
                  h5
                    | Forgot your password? <a ui-sref='login'> Login</a>
            .row
              .col-md-offset-4.col-md-4
script(src='js/modules/login.js')